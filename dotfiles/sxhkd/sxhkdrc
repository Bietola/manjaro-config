super + j ; k
    notify-send "$(/sul/config-keyboard 2>&1)" ;\
    notify-send 'Reloaded keyboard config'

###########################
# Quickly launch programs #
###########################

super + shift + Return
    alacritty

super + shift + o
    alacritty -e /sul/fzp -o -kt

super + o ; e
    emacs

super + o ; b
    qutebrowser

super + o ; f
    firefox

super + o ; r
    alacritty -e ranger

super + r
    alacritty -e ranger

super + shift + r
    alacritty -e sudo ranger

super + o ; d
    discord

# TODO: Find "real" openboard command
super + o ; o
    /sul/openboard-tmp
    
super + o ; t
    telegram-desktop

super + o ; m
    musescore

super + w ; e
    WORD=$(zenity --entry --text="Word to lookup") ;\
    [ -n "$WORD" ] && alacritty -e nvim \
        +'echo "loading definition..."' \
        +"$(printf 'call append(0,         systemlist("dict               %s"))' "$WORD")" \
        +'call append(line("$"), ["ITA TRANSLATION:", ""])' \
        +"$(printf 'call append(line("$"), systemlist("dict -d fd-eng-ita %s"))' "$WORD")" \
        +'normal! gg' \
        +'sil !xdotool key super+space'

super + w ; i
    WORD=$(zenity --entry --text="Parola da definire") ;\
    [ -n "$WORD" ] && alacritty -e nvim \
        +'echo "loading definition..."' \
        +"$(printf 'call append(0,         systemlist("dict -d fd-ita-eng %s"))' "$WORD")" \
        +'normal! gg' \
        +'sil !xdotool key super+space'

#############
# Bluetooth #
#############

super + b
    bluetooth on; sleep 4; blueman-manager

super + shift + b
    bluetooth off

##################
# External Media #
##################

super + shift + a
    SUDO_ASKPASS=/sul/zenity-askpass sudo -A mount -a 2>&1 |\
        /sul/largs /sul/notify-or "All devices remounted" ;\
    notify-send "$(/sul/lsmnt | tr '\n' ',')"

super + shift + e
    TO_UMOUNT="$(/sul/lsmnt | dmenu)" ;\
    SUDO_ASKPASS=/sul/zenity-askpass sudo -A umount "$TO_UMOUNT" 2>&1 | /sul/largs /sul/notify-or "$TO_UMOUNT unmounted"

##################
# Power commands #
##################

alt + shift + s
    shutdown now

alt + shift + r
    reboot

##########################
# Quickly Toggle Options #
##########################

super + shift + t
    ~/bin/toggle-touchpad 2>&1 | xargs notify-send

super + shift + v
    keynav ;\
    notify-send -t 1000 "Keynav on"

#######################
# Brightness controls #
#######################

super + ctrl + m
    set-brightness 100

super + ctrl + plus
    set-brightness +10

super + ctrl + minus
    set-brightness -10

super + s ; r
    redshift -PO 3000

super + s ; b
    redshift -PO 3750

super + s ; i
    /sul/rotate-screen bottom-up

super + s ; n
    /sul/rotate-screen normal

# Screen resolution

super + s ; 5
    /sul/xrandr-add-resolutions set .5

super + s ; 6
    /sul/xrandr-add-resolutions set .6

super + s ; 7
    /sul/xrandr-add-resolutions set .7

super + s ; 8
    /sul/xrandr-add-resolutions set .8

super + s ; 9
    /sul/xrandr-add-resolutions set .9

super + s ; 1
    /sul/xrandr-add-resolutions set 1

###################
# Volume controls #
###################

super + plus
    amixer -c 0 sset Master 5%+ ;\
    notify-send -t 1000 "volume: $(~/bin/show-vol 0 Master)"

super + minus
    amixer -c 0 sset Master 5%- ;\
    notify-send -t 1000 "volume: $(~/bin/show-vol 0 Master)"

super + m
    ~/bin/toggle-sound-mute

super + a
    notify-send "$(~/bin/toggle-sound-source | tail -n1)"

super + u
    ~/bin/unmute-all  ;\
    notify-send "unmuting all devices"


#################################
# Things for live screencapture #
#################################

# TODO: Try to make this the same binding that is used for recording and see what happens
super + ctrl + i
    auto-timestamps -i

super + ctrl + u
    auto-timestamps new

super + ctrl + n
    auto-timestamps new $(~/bin/spawn-terminal-prompt "Name upcoming chapter: ")

super + ctrl + r
    LAST_TIMESTAMP=$(auto-timestamps get-current duration) ;\
    NAME=editor-prompt "Name chapter created $LAST_TIMESTAMP ago: " ;\
    auto-timestamps set-current name "$NAME"

